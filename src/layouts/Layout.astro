---
import "../styles/global.css";
import { site } from "../data/site";
import Navbar from "../components/Navbar.astro";
const { title } = Astro.props as { title?: string };
const pageTitle = title ? `${title} | ${site.name}` : site.name;
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body class="m-0 flex min-h-full flex-col bg-bg-mid font-sans text-ink">
    <a href="#main" class="sr-only focus:not-sr-only">Skip to content</a>
    <header
      id="site-header"
      class="sticky top-0 z-50 border-b border-soft bg-white/95 backdrop-blur transition-all duration-300 ease-out hover:translate-y-0 hover:opacity-100"
    >
      <Navbar />
    </header>
    <main id="main" class="mx-auto w-full flex-1">
      <slot />
    </main>

    <footer class="border-t border-soft px-4 py-4 text-muted">
      <div class="mx-auto max-w-[72rem]">
        Â© {new Date().getFullYear()}
        {site.name}
      </div>
    </footer>
  </body>
</html>

<script is:inline>
  // Hide the navbar after a small scroll; show again on hover or when near top.
  (function () {
    const header = document.getElementById("site-header");
    const HIDE_AFTER = 80; // px

    function update() {
      const shouldHide = window.scrollY > HIDE_AFTER;
      header.classList.toggle("opacity-0", shouldHide);
      header.classList.toggle("-translate-y-2", shouldHide);
      header.classList.toggle("shadow-none", shouldHide);
      header.classList.toggle("shadow-sm", !shouldHide);
    }

    // Run on load and on scroll
    update();
    window.addEventListener("scroll", update, { passive: true });
  })();
</script>

<style>
  /* --- Fonts (safe to @import in a page or move to a global CSS if you prefer) --- */
  @import url("https://fonts.googleapis.com/css2?family=Pacifico&family=Quicksand:wght@400;600;700&display=swap");

  /* --- Theme tokens (tweak these to match branding exactly) --- */
  :root {
    --sand: #f8e7c7;
    --sea-50: #e6f7ff;
    --sea-300: #60a5fa;
    --sea-500: #0ea5e9; /* primary ocean */
    --deep-sea: #0b3a7e;
    --coral: #ff7a59; /* accent */
    --palm: #10b981; /* secondary accent */
    --sun: #f59e0b; /* dates + sunny highlights */
    --ink: #064e3b; /* body text in card */
    --glass: rgba(255, 255, 255, 0.72);
    --glass-border: rgba(255, 255, 255, 0.45);
    --shadow: 0 12px 32px rgba(0, 0, 0, 0.25);
    --radius-lg: 1.25rem;
  }
</style>
